# Environment variables for HyperSense
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
# DATABASE_URL has priority if set (for remote/production databases)
# Uncomment and set these for remote database connections:
#DATABASE_URL=postgresql://user:password@host:5432/hypersense
#DATABASE_CACHE_URL=postgresql://user:password@host:5432/hypersense_cache
#DATABASE_QUEUE_URL=postgresql://user:password@host:5432/hypersense_queue
#DATABASE_CABLE_URL=postgresql://user:password@host:5432/hypersense_cable

# Individual database settings (used if DATABASE_URL not set)
# Default values are configured for local Docker development (port 5433)
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_DATABASE=hypersense_development
DATABASE_USER=hypersense
DATABASE_PASSWORD=hypersense_dev

# =============================================================================
# Hyperliquid API (for trading)
# =============================================================================
HYPERLIQUID_PRIVATE_KEY=your_wallet_private_key
HYPERLIQUID_ADDRESS=your_wallet_address

# =============================================================================
# Choose LLM Provider for AI Reasoning
# Options: anthropic, gemini, ollama, openai
# =============================================================================
LLM_PROVIDER=anthropic

# Gemini Configuration (required if LLM_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Ollama Configuration (required if LLM_PROVIDER=ollama)
OLLAMA_API_BASE=http://localhost:11434/v1  # Ollama API base URL with /v1 suffix (default: http://localhost:11434/v1)
OLLAMA_MODEL=qwen3:8b

# Anthropic API (required if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-haiku-4-5

# OpenAI Configuration (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-5.2

# =============================================================================
# Mission Control Jobs Dashboard
# =============================================================================
# HTTP Basic Auth for /jobs dashboard
MISSION_CONTROL_USER=admin
MISSION_CONTROL_PASSWORD=your_secure_password_here

# =============================================================================
# Tunnel Configuration (for remote access during development)
# =============================================================================
# Backend tunnel hostname (just the host, no protocol)
# Example: your-tunnel.ngrok-free.app
#BACKEND_TUNNEL_HOST=your-backend-url

# Frontend tunnel URL (full URL with protocol)
# Example: https://your-tunnel.pinggy.link
#FRONTEND_TUNNEL_URL=https://your-frontend-url